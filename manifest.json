{
  "manifest_version": 3,
  "name": "bettercards",
  "version": "1.0",
  "description": "Shows the user's header banner when hovering over their profile link.",
  "permissions": [],
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles.css"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["injected.js"],
      "matches": ["https://twitter.com/*", "https://x.com/*"]
    }
  ]
}
